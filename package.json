{
  "name": "tribeminer",
  "version": "1.0.0",
  "description": "Cloud Lottery Pool Miner for AUM tokens",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "server": "tsx src/backend/server.ts",
    "server:dev": "tsx watch src/backend/server.ts",
    "start": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "migrate": "npx @better-auth/cli migrate",
    "generate-schema": "npx @better-auth/cli generate",
    "init-db": "tsx init-db.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "better-auth": "^1.2.8",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "pinia": "^2.1.7",
    "uuid": "^10.0.0",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/node": "^20.17.50",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-vue": "^5.0.5",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.19.4",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vue-tsc": "^2.0.21"
  }
}
